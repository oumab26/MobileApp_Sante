<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExerciceActivity">

    <Spinner
        android:id="@+id/exercicePic"
        android:layout_width="299dp"
        android:layout_height="81dp"
        android:layout_marginTop="40dp"
        android:entries="@array/spinnerItems"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercice_category" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/exercice_category"
        android:layout_width="204dp"
        android:layout_height="71dp"
        android:layout_marginTop="60dp"
        android:hint="hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciceName" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/exerciceName"
        android:layout_width="293dp"
        android:layout_height="70dp"
        android:layout_marginTop="72dp"
        android:hint="hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/exerciceDetails"
        android:layout_width="299dp"
        android:layout_height="170dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercicePic" />

    <Button
        android:id="@+id/addExercicebtn"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="Add Exercice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciceDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>
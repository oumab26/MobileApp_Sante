<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btnGym"
        android:layout_width="137dp"
        android:layout_height="54dp"
        android:layout_marginTop="511dp"
        android:backgroundTint="@color/white"
        android:text="gym exercises"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnrecipes"
        android:layout_width="137dp"
        android:layout_height="54dp"
        android:layout_marginTop="593dp"
        android:backgroundTint="@color/white"
        android:text="recipes"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="324dp"
        android:layout_height="224dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover" />

    <Button

        android:id="@+id/btnBmi"
        android:layout_width="137dp"
        android:layout_height="54dp"
        android:layout_marginTop="429dp"
        android:backgroundTint="@color/white"
        android:text="Calories"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCalorie"
         android:layout_width="137dp"
        android:layout_height="54dp"
        android:layout_marginTop="268dp"
        android:backgroundTint="@color/white"
        android:text="BMI"
	android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnchrono"
       	 android:layout_width="137dp"
        android:layout_height="54dp"
        android:layout_marginTop="344dp"
        android:backgroundTint="@color/white"
	android:textColor="#000"
        android:text="Chrononometre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="405dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:text="Logout"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnrecipes"
        app:layout_constraintVertical_bias="0.688"
        tools:layout_editor_absoluteX="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
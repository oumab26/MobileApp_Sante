<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AdminActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="386dp"
        android:layout_height="269dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover"
        tools:layout_editor_absoluteX="13dp" />

    <Button
        android:id="@+id/addExercice"
        android:layout_width="209dp"
        android:layout_height="63dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/white"
        android:text="Add Gym Exercice"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/addRecepie"
        android:layout_width="209dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/white"
        android:text="Add Recepies"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addExercice" />

    <ImageView
        android:id="@+id/adminLogout"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecepie"
        app:srcCompat="@drawable/logout" />

</androidx.constraintlayout.widget.ConstraintLayout>